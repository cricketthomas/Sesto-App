                    <Label FontSize="Small" Text="An email will be sent to the email associated with the user identifier." />
                    <Button Text="Request Email Password Reset Email" Visual="Material" />

                </StackLayout>-->


            </StackLayout>
        </StackLayout>

    </StackLayout>
    <ContentPage.Content />
</ContentPage>
